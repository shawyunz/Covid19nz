<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Covid19nz.Views.LocationsPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:d="http://xamarin.com/schemas/2014/forms/design"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    BackgroundColor="#f1f5ff"
    Shell.NavBarIsVisible="False">

    <!--<ContentPage.ToolbarItems>
        <ToolbarItem IconImageSource="icn_refresh.png" Command="{Binding LoadItemsCommand}" />
    </ContentPage.ToolbarItems>-->

    <!--<Shell.TitleView>
        <StackLayout Orientation="Horizontal">
            <Image
                WidthRequest="32"
                Margin="10,0"
                Source="icon.png" />
            <Label
                VerticalOptions="CenterAndExpand"
                Text="{Binding Title}"
                FontAttributes="Bold"
                FontSize="20"
                TextColor="White" />
        </StackLayout>
    </Shell.TitleView>-->

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="80" />
            <RowDefinition Height="80" />
        </Grid.RowDefinitions>

        <StackLayout
            x:Name="LytSummary"
            Grid.Row="0"
            Grid.RowSpan="3"
            Padding="40"
            BackgroundColor="#f1f5ff">
            <Grid Margin="-20,0,0,0">
                <Grid.GestureRecognizers>
                    <TapGestureRecognizer Tapped="TappedSummary" />
                </Grid.GestureRecognizers>
                <StackLayout Orientation="Horizontal">
                    <Image
                        WidthRequest="40"
                        Margin="10,0"
                        Source="icon.png" />
                    <Label
                        Text="Covid-19 Summary"
                        FontAttributes="Bold"
                        FontSize="24" />
                </StackLayout>
            </Grid>
            <Grid RowSpacing="14" Padding="0,25,0,25">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid.Resources>
                    <ResourceDictionary>
                        <Style TargetType="Label">
                            <Setter Property="HorizontalOptions" Value="Center" />
                            <Setter Property="Margin" Value="0,0" />
                        </Style>
                    </ResourceDictionary>
                </Grid.Resources>
                <Label
                    Grid.Row="0"
                    Grid.Column="0"
                    Margin="0,8,0,0"
                    Text="Total Number" />
                <StackLayout
                    Grid.Row="1"
                    Grid.Column="0"
                    Orientation="Horizontal"
                    HorizontalOptions="CenterAndExpand">
                    <Label
                        Text="{Binding SummaryData.CasesAmount}"
                        FontAttributes="Bold"
                        FontSize="24"
                        TextColor="IndianRed" />
                    <Label
                        VerticalOptions="Center"
                        Text="{Binding SummaryData.CasesAmountNew24h}"
                        FontAttributes="Bold"
                        FontSize="14"
                        TextColor="IndianRed" />
                </StackLayout>

                <Label
                    Grid.Row="0"
                    Grid.Column="1"
                    Margin="0,8,0,0"
                    Text="Recovered" />
                <StackLayout
                    Grid.Row="1"
                    Grid.Column="1"
                    Orientation="Horizontal"
                    HorizontalOptions="CenterAndExpand">
                    <Label
                        Text="{Binding SummaryData.RecoveredCasesTotal}"
                        FontAttributes="Bold"
                        FontSize="24"
                        TextColor="ForestGreen" />
                    <Label
                        VerticalOptions="Center"
                        Text="{Binding SummaryData.RecoveredCasesNew24h}"
                        FontAttributes="Bold"
                        FontSize="14"
                        TextColor="ForestGreen" />
                </StackLayout>

                <Label
                    Grid.Row="2"
                    Grid.Column="0"
                    IsVisible="{Binding ExpandHeader}"
                    Margin="0,16,0,0"
                    Text="Confirmed"
                    TextColor="LightGray" />
                <StackLayout
                    Grid.Row="3"
                    Grid.Column="0"
                    IsVisible="{Binding ExpandHeader}"
                    Orientation="Horizontal"
                    HorizontalOptions="CenterAndExpand">
                    <Label
                        Text="{Binding SummaryData.ConfirmedCasesTotal}"
                        FontAttributes="Bold"
                        FontSize="24"
                        TextColor="Salmon" />
                    <Label
                        VerticalOptions="Center"
                        Text="{Binding SummaryData.ConfirmedCasesNew24h}"
                        FontAttributes="Bold"
                        FontSize="14"
                        TextColor="Salmon" />
                </StackLayout>

                <Label
                    Grid.Row="2"
                    Grid.Column="1"
                    IsVisible="{Binding ExpandHeader}"
                    Margin="0,16,0,0"
                    Text="in Hospital"
                    TextColor="LightGray" />
                <StackLayout
                    Grid.Row="3"
                    Grid.Column="1"
                    IsVisible="{Binding ExpandHeader}"
                    Orientation="Horizontal"
                    HorizontalOptions="CenterAndExpand">
                    <Label
                        Text="{Binding SummaryData.HospitalisedCasesTotal}"
                        FontAttributes="Bold"
                        FontSize="24"
                        TextColor="SkyBlue" />
                    <Label
                        VerticalOptions="Center"
                        Text="{Binding SummaryData.HospitalisedCasesNew24h}"
                        FontAttributes="Bold"
                        FontSize="14"
                        TextColor="SkyBlue" />
                </StackLayout>

                <Label
                    Grid.Row="4"
                    Grid.Column="0"
                    IsVisible="{Binding ExpandHeader}"
                    Margin="0,8,0,0"
                    Text="Probable"
                    TextColor="LightGray" />
                <StackLayout
                    Grid.Row="5"
                    Grid.Column="0"
                    IsVisible="{Binding ExpandHeader}"
                    Orientation="Horizontal"
                    HorizontalOptions="CenterAndExpand">
                    <Label
                        Text="{Binding SummaryData.ProbableCasesTotal}"
                        FontAttributes="Bold"
                        FontSize="24"
                        TextColor="Orange" />
                    <Label
                        VerticalOptions="Center"
                        Text="{Binding SummaryData.ProbableCasesNew24h}"
                        FontAttributes="Bold"
                        FontSize="14"
                        TextColor="Orange" />
                </StackLayout>

                <Label
                    Grid.Row="4"
                    Grid.Column="1"
                    IsVisible="{Binding ExpandHeader}"
                    Margin="0,8,0,0"
                    Text="Death"
                    TextColor="LightGray" />
                <StackLayout
                    Grid.Row="5"
                    Grid.Column="1"
                    IsVisible="{Binding ExpandHeader}"
                    Orientation="Horizontal"
                    HorizontalOptions="CenterAndExpand">
                    <Label
                        Text="{Binding SummaryData.DeathCasesTotal}"
                        FontAttributes="Bold"
                        FontSize="24"
                        TextColor="Gray" />
                    <Label
                        VerticalOptions="Center"
                        Text="{Binding SummaryData.DeathCasesNew24h}"
                        FontAttributes="Bold"
                        FontSize="14"
                        TextColor="Gray" />
                </StackLayout>
            </Grid>
        </StackLayout>

        <Frame
            x:Name="LytDistrict"
            Grid.Row="1"
            Grid.RowSpan="2"
            Margin="40,0,-60,-60"
            BackgroundColor="#C9FCC9"
            CornerRadius="60">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="80" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <Grid Grid.Row="0" Padding="20">
                    <Grid.GestureRecognizers>
                        <TapGestureRecognizer Tapped="TappedDistrict" />
                    </Grid.GestureRecognizers>
                    <Label
                        Margin="0"
                        VerticalOptions="FillAndExpand"
                        CharacterSpacing="0"
                        Text="Districts"
                        FontAttributes="Bold"
                        FontSize="24" />
                </Grid>

                <RefreshView
                    Grid.Row="1"
                    Margin="16,0,24,180"
                    IsRefreshing="{Binding IsBusy, Mode=TwoWay}"
                    Command="{Binding LoadItemsCommand}">
                    <CollectionView
                        x:Name="CollectionLocation"
                        ItemsSource="{Binding ListLocation}"
                        SelectedItem="{Binding SelectedLocation}"
                        SelectionMode="Single"
                        SelectionChanged="OnItemSelected">
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <StackLayout
                                    Margin="20,0,40,0"
                                    Orientation="Horizontal"
                                    HorizontalOptions="FillAndExpand">
                                    <Label
                                        HorizontalOptions="StartAndExpand"
                                        VerticalOptions="CenterAndExpand"
                                        Text="{Binding LocationName}"
                                        FontSize="16"
                                        TextColor="#011223" />
                                    <Label
                                        HorizontalOptions="End"
                                        VerticalOptions="CenterAndExpand"
                                        Text="{Binding CaseCount}"
                                        FontSize="18"
                                        TextColor="#011223" />
                                </StackLayout>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </RefreshView>
            </Grid>
        </Frame>

        <Frame
            x:Name="LytCluster"
            Grid.Row="2"
            Margin="80,0,-60,-60"
            BackgroundColor="#FCFFAF"
            CornerRadius="60">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="80" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <Grid Grid.Row="0" Padding="20">
                    <Grid.GestureRecognizers>
                        <TapGestureRecognizer Tapped="TappedCluster" />
                    </Grid.GestureRecognizers>
                    <Label
                        Margin="0"
                        Text="Clusters"
                        FontAttributes="Bold"
                        FontSize="24" />
                </Grid>

                <RefreshView
                    Grid.Row="1"
                    Margin="16,0,24,180"
                    IsRefreshing="{Binding IsBusy, Mode=TwoWay}"
                    Command="{Binding LoadItemsCommand}">
                    <CollectionView x:Name="CollectionCluster" ItemsSource="{Binding ListCluster}">
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <StackLayout
                                    Margin="20,0,40,0"
                                    Orientation="Horizontal"
                                    HorizontalOptions="FillAndExpand">
                                    <Label
                                        HorizontalOptions="StartAndExpand"
                                        VerticalOptions="CenterAndExpand"
                                        Text="{Binding Name}"
                                        FontSize="12"
                                        TextColor="#011223" />
                                    <Label
                                        HorizontalOptions="End"
                                        VerticalOptions="CenterAndExpand"
                                        Text="{Binding Cases}"
                                        FontSize="18"
                                        TextColor="#011223" />
                                    <Label
                                        HorizontalOptions="End"
                                        VerticalOptions="CenterAndExpand"
                                        Text="{Binding CasesNew24H, StringFormat='({0})'}"
                                        FontSize="12"
                                        TextColor="#011223" />
                                </StackLayout>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </RefreshView>
            </Grid>
        </Frame>
    </Grid>
</ContentPage>